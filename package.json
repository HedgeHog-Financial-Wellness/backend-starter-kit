{
  "name": "backend-starter-kit",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsup --format esm",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "test": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.7",
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@hono/node-server": "^1.13.8",
    "@hono/zod-openapi": "^0.18.3",
    "@scalar/express-api-reference": "^0.4.179",
    "@scalar/hono-api-reference": "^0.5.170",
    "@ts-rest/core": "^3.51.0",
    "@ts-rest/express": "^3.51.0",
    "@ts-rest/open-api": "^3.51.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-serve-static-core": "^0.1.1",
    "express-zod-api": "^22.6.0",
    "helmet": "^8.0.0",
    "hono": "^4.6.20",
    "hono-pino": "^0.7.0",
    "http-errors": "^2.0.0",
    "nanoid": "^5.0.9",
    "openapi3-ts": "^4.4.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^20.17.16",
    "@types/pg": "^8.11.11",
    "@types/swagger-ui-express": "^4.1.7",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.19.0",
    "eslint-plugin-format": "^1.0.1",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "vitest": "^3.0.4"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "esm": true
  }
}
